{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Basic Options */
    // "incremental": true,                   /* Enable incremental compilation */
    "target": "es2020",     
    "module": "commonjs",
    "lib": ["es2018"],
    "allowJs": true,
    "outDir": "build",
    //"rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    /* Advanced Options */
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
